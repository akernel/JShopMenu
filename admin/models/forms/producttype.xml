<?xml version="1.0" encoding="utf-8"?>
 <form>
     <fieldset name="details">
         <field
             name="product_type_id"
             type="hidden"
         />
         <field
             name="name"
             type="text"
             label="COM_JSHOPMENU_PRODUCTTYPE_FIELD_NAME_LABEL"
             description="COM_JSHOPMENU_PRODUCTTYPE_FIELD_NAME_DESC"
             size="40"
             class="inputbox validate-name"
             required="true"
             maxlength="255"
             default=""
         />
         <field
             name="published"
             type="list"
             label="JSTATUS"
             description="JFIELD_PUBLISHED_DESC"
             class="chzn-color-state validate-published"
             default="1"
             size="1"
         >
        	<option value="1">
        		JPUBLISHED</option>
        	<option value="0">
        		JUNPUBLISHED</option>
         </field>
         <field
             name="napitki"
             type="list"
             label="COM_JSHOPMENU_PRODUCTTYPE_FIELD_NAPITKI_LABEL"
             description="COM_JSHOPMENU_PRODUCTTYPE_FIELD_NAPITKI_DESC"
             size="1"
             class="chzn-color-state validate-published"
             default="0"
         >
        	<option value="1">
        		JYES</option>
        	<option value="0">
        		JNO</option>
         </field>
     </fieldset>
    <fields name="params">
        <fieldset
            name="params"
            label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
        >
        </fieldset>
    </fields>
 </form>